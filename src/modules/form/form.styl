.form
  padding-bottom: 100px
  
  &:before
    content: ''
    display: block
    position: absolute
    right: 0
    margin-top: -50px
    //top: 0
    background: url(../img/sprite-background-2.svg)
    z-index: -1

    @media (max-width: 1230px)
      display: none


  &__wrapper
    max-width: 930px
    border: 1px solid #D8D8D8
    border-radius: 2px
    margin: 0 auto
    padding: 40px 54px 54px - 45px

    @media (max-width: $breakpoint-sm - 1)
      border: 0
      padding: 0

  &__row
    display: flex
    margin-bottom: 45px
    align-items: flex-end

    @media (max-width: $breakpoint-sm - 1)
      flex-direction: column
      align-items: stretch
      margin-bottom: 0

  &__item
    flex: 1
    padding: 0 9px

    @media (max-width: $breakpoint-sm - 1)
      margin-bottom: 24px

  &__button
    padding: 0 12px

.button
  display: flex
  align-items: center
  justify-content: center
  font: inherit
  font-size: 14px
  line-height: 1.2
  font-weight: 600
  color: #ffffff
  background: $green
  border-radius: 25px
  border: 0
  width: 100%
  height: 50px
  padding: 0 20px
  margin: 0 auto
  outline: 0
  cursor: pointer
  -webkit-appearance: none
  -moz-appearance: none
  appearance: none
  anim()

  &:hover
    background: $green-light

  &--inline
    width: auto

.selectize-control
  position: relative
  font-size: 14px
  line-height: 1.2
  font-weight: 500

.selectize-input
  padding: 10px 15px 0 15px
  position: relative
  white-space: nowrap
  anim()
  cursor: pointer

  @media (max-width: $breakpoint-sm - 1)
    padding-top: 8px
    padding-bottom: 8px

  &:hover
    color: $green

  &.input-active
    background: #f1f1f1
    color: #000000

  &:before
    content: ''
    display: block
    background: url(../img/sprite-select-arrow.svg)
    position: absolute
    right: 15px
    top: 50%
    margin-top: -6px
    //opacity: .4
    anim()

  &.input-active:before
    transform: rotate(180deg)

  &:after
    content: ''
    display: block
    width: 100%
    height: 3px
    background: $green
    margin-top: 10px
    anim()

  &.input-active:after
    opacity: 0

  &.disabled input
    opacity: .1
    //background-color: #dfdfdf

  .item
    vertical-align: top
    display: inline-block
    overflow: hidden
    white-space: nowrap
    text-overflow: ellipsis
    max-width: 100%

  input
    font: inherit
    display: inline-block
    vertical-align: top
    padding: 0
    min-height: 0
    max-height: none
    max-width: 100%
    margin: 0 2px 0 0
    text-indent: 0
    border: 0 none
    background: none
    line-height: inherit
    -webkit-user-select: auto
    -webkit-box-shadow: none
    box-shadow: none
    outline: 0

.selectize-dropdown
  position: absolute
  z-index: 10
  background: #f1f1f1
  border-radius: 0 0 1px 1px
  max-height: 200px
  overflow-y: scroll
  width: auto !important;
  min-width: 100%;

  .option
    font: inherit
    padding: 11px 15px
    white-space: nowrap
    overflow: hidden
    text-overflow: ellipsis
    cursor: pointer
    anim()

    &:hover
      color: $green