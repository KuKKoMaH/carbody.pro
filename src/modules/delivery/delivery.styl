.delivery
  margin-bottom: 90px
  @media(max-width: 960px)
    margin-bottom: 40px
  &__items
    display: flex
    align-items: center
    justify-content: space-around
    margin-bottom: 110px
    @media(max-width: 960px)
      margin-bottom: 60px

    .owl-dots
      text-align: center
      height: 20px
      margin-top: 24px

    button.owl-dot
      outline: 0
      width: 15px
      margin: 0 13px
      display: inline-block
      vertical-align: middle
      span
        display: block
        margin: 0 auto
        width: 12px
        height: 12px
        background: #D1D1D1
        border-radius: 50%
        anim()

      &.active span
        border: 5px solid $green
        background-color: transparent
        width: 15px
        height: 15px

  .owl-item &__item
    img
      display: block
      margin: 0 auto
      width: auto

  &__steps
    justify-content: space-between
    flex-wrap: wrap

  &__step
    //flex: 1
    position: relative
    padding-left: 60px
    @media(max-width: 700px)
      padding-left: 45px
    @media(max-width: 1150px)
      margin-bottom: 35px
    @media(min-width: 700px) and (max-width: 1150px)
      width: 50%

  &__title
    display: flex
    align-items: center
    font-size: 17px
    font-weight: 500
    line-height: 37px
    margin-bottom: 20px

  &__label
    width: 37px
    height: 37px
    border-radius: 50%
    border: 4px solid $green
    line-height: 37px - 4px * 2
    text-align: center
    font-size: 16px
    font-weight: 600
    margin-right: 37px
    position: absolute
    left: 0
    top: 0

  &__text
    font-size: 16px
    line-height: 25px

    a
      color: $green
      text-decoration: underline

      &:hover
        color: $green-light
        text-decoration: none
